                    data-srcset="/assets/theme/build/img/bedrooms/bedroom-screen-1.jpg    1x, /assets/theme/build/img/bedrooms/bedroom-screen-1@2x.jpg 2x"
                    alt="Beddroom screen 1"
                    width="700"
