<section class="small">
  <div class="small__image-block">
    <div class="small__image absolute-image">
      <picture>
        <source
          type="image/webp"
          data-srcset="[[+image:phpthumbof=`f=webp]]"
          srcset="
            data:image/gif;base64,R0lGODlhAgADAIAAAP///wAAACH5BAEAAAEALAAAAAACAAMAAAICjF8AOw==
          "
        />
        <img
          loading="lazy"
          class="lazyload"
          src="data:image/gif;base64,R0lGODlhAgADAIAAAP///wAAACH5BAEAAAEALAAAAAACAAMAAAICjF8AOw=="
          data-srcset="[[+image]]"
          alt="[[+title]]"
        />
      </picture>
    </div>
  </div>
  <div class="small__text-block">
    <h2 class="small__title">[[+title]]</h2>
    <p class="small__text">[[+description]]</p>
  </div>
</section>
