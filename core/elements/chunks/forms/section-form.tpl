<form
  class="form js-cm-form"
  action="https://www.createsend.com/t/subscribeerror?description="
  data-id="30FEA77E7D0A9B8D7616376B9006323195ADA8E05A6B2F3839B976033E8E410D82B93B0CC861F595BC5CF430CB9DA99DEDBBEC5B7695513F267007CF0393DF0F"
  method="post"
>
  <label class="form__label"
    >Name:
    <input type="text" name="cm-name" id="fieldName" class="form__input" required/>
  </label>
  <label class="form__label"
    >Email:
    <input
      type="email"
      id="fieldEmail"
      name="cm-jlkilrd-jlkilrd"
      class="form__input _req js-cm-email-input qa-input-email"
      required
    />
  </label>
  <label class="form__label"
    >Telephone:
    <input
      type="text"
      id="fielddldridd"
      name="cm-f-dldridd"
      class="form__input _req"
      required
    />
  </label>
  <label class="form__label"
    >Postcode:
    <input
      type="text"
      id="fielddldridh"
      name="cm-f-dldridh"
      class="form__input"
      required
    />
  </label>
  <div class="form__privacy">
    <div class="form__privacy-caption">Privacy</div>
    <label class="form__label-privacy">
      <input
        type="checkbox"
        name="cm-privacy-consent"
        class="form__input-checkbox"
        required
      />
      <span>
        I have read and accept the Urban Myth
        <a href="[[~22]]" target="_blank">Privacy Policy</a>
      </span>
    </label>
    <input
      class="form-check-input"
      id="cm-privacy-consent-hidden"
      name="cm-privacy-consent-hidden"
      type="hidden"
      value="true"
    />
  </div>
  <input
    aria-label="campaignID"
    id="fielddldridu"
    name="cm-f-dldridu"
    type="hidden"
    value="[[*campaign-id]]"
  />
  <button type="submit" class="form__submit button js-cm-submit-button">
    [[*send-button-text]]
  </button>
</form>